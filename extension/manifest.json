{
  "name": "ScreenShare",
  "description": "Share your screen in an instant",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "caster_logo.png"  // optional
    // equivalent to "default_icon": { "19": "images/icon19.png" }
  },
  "background": {
    "scripts": ["background.js", "jquery-1.11.1.js", "webrtc.io.js", "socket.io-1.0.6.js", "RTCMultiConnection-v1.9.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.11.1.js"]
    }
  ],
  "icons": {
  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "storage"
  ]
}
