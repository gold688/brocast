{
  "name": "brocast",
  "description": "Share your screen in an instant",
  "version": "0.0.1",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": "images/Brocast_logo.png",
    "default_title": "Share Screen",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["javascripts/socket.io-1.0.6.js", "javascripts/background.js", "javascripts/jquery-1.11.1.js", "javascripts/webrtc.io.js", "javascripts/RTCMultiConnection-v1.9.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["javascripts/jquery-1.11.1.js", "javascripts/content.js"]
    }
  ],
  "icons": {

  },
  "permissions": [
    "desktopCapture",
    "tabs",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "clipboardWrite",
    "https://www.facebook.com/"
  ]
}
